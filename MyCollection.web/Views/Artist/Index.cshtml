@model List<Artist>

<br />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Artist" asp-action="Create" class="btn btn-success">
                Add new artist
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Artist First Name
                </th>
                <th>
                    Artist Last Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.LastName))
            {
                <tr>
                    <td>@obj.FirstName</td>
                    <td>@obj.LastName</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Artist" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Artist" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>