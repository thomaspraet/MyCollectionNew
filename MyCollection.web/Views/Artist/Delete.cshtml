@model Artist


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary">Delete Artist</h4>
        </div>
        <div class="mb-3 row">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Artist</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Artist" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>